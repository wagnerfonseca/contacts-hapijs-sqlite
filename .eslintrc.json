{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": { 
        // disable
        //"init-declarations": "off",
        "no-console": "off",
        "no-inline-comments": "off",

        "indent": ["error", 2],
        "semi": ["error", "never"],
        "quotes": ["error", "single"]

    }
}